<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <LangVersion>preview</LangVersion>
        <Nullable>enable</Nullable>
        <Authors>curtisy1</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>Resource Designer Source Generator</Description>
        <Version>1.0.1</Version>
        <PackageVersion>1.0.1</PackageVersion>
        <Copyright>2023 curtisy1</Copyright>
        <PackageProjectUrl>https://github.com/curtisy1/Intl.Net</PackageProjectUrl>
        <RepositoryUrl>https://github.com/curtisy1/Intl.Net</RepositoryUrl>
        <PackageOutputPath>../../bin</PackageOutputPath>
        <DevelopmentDependency>true</DevelopmentDependency>
        <IsRoslynComponent>true</IsRoslynComponent>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.0" />
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.3">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="System.Globalization" Version="4.3.0" />
        <PackageReference Include="System.Text.Json" Version="6.0.7" />
        <ProjectReference Include="..\Intl.Net.ResourceManager\Intl.Net.ResourceManager.csproj" PrivateAssets="all" GeneratePathProperty="true" />
        <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
        <None Include="$(OutputPath)\Intl.Net.ResourceManager.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>

</Project>